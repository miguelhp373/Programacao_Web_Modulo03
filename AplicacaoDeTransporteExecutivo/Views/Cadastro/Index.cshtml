<!DOCTYPES html>
    <html>
    <head>
        <title>Transporte Executivo</title>
    </head>
    <body>
        <div>
            <h1>Cadastro - Transporte Executivo</h1>
            <form method="post" action="/Cadastro/ReceberCadastro">
                <div>
                    <label for="nome">Nome:</label>
                    <input type="text" name="nome" id="nome" maxlength="40" placeholder="Informe seu nome...">
                    @Html.ValidationMessage("nome")
                </div>
                <div>
                    <label for="telefone">Telefone:</label>
                    <input type="text" name="telefone" id="telefone" maxlength="15" placeholder="Informe seu telefone de contato...">
                    @Html.ValidationMessage("telefone")
                </div>
                <div>
                    <label for="ida">Ida:</label>
                    <select name="ida">
                        <option value="sim">Sim</option>
                        <option value="não">Não</option>
                    </select>
                    @Html.ValidationMessage("ida")
                </div>
                <div>
                    <label for="volta">Volta:</label>
                    <select name="volta">
                        <option value="sim">Sim</option>
                        <option value="não">Não</option>
                    </select>
                    @Html.ValidationMessage("volta")
                </div>
                <button type="submit">Enviar</button>
                <button type="reset">Limpar</button>
            </form>
        </div>
        <footer>
            <div>
                <p>Todos os direitos reservados para Transporte Executivo 3M&copy; - 2021 - @DateTime.Now.Year.</p>
            </div>
        </footer>
    </body>
</html>
